{
    "name": "2bo-velocity-site",
    "version": "2.0.0",
    "description": "2bo official website with modern design",
    "scripts": {
        "watch": "tailwindcss -i ./assets/css/main.css -o ./static/css/main.css --watch",
        "build": "tailwindcss -i ./assets/css/main.css -o ./static/css/main.css --minify",
        "dev": "npm run watch & hugo server -D",
        "production": "npm run build && hugo --gc --minify"
    },
    "keywords": [
        "hugo",
        "tailwindcss",
        "2bo",
        "developer-tools"
    ],
    "author": "2bo",
    "license": "MIT",
    "devDependencies": {
        "@tailwindcss/typography": "^0.5.19",
        "tailwindcss": "^3.4.1"
    }
}
